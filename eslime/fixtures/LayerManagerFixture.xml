<fixture>

    <!-- Define a geometry case. -->
    <geometry>
        <shape>
            <class>Rectangle</class>
            <height>10</height>
            <width>10</width>
        </shape>
        <lattice>
            <class>Rectangular</class>
        </lattice>
    </geometry>

    <!-- Define two LayerManager cases. -->
    <!-- Note: LayerManager doesn't care about tag name of layer root -->
    <first-case>
        <cell-layer>
            <boundary>
                <class>Arena</class>
            </boundary>
        </cell-layer>
        <solute-layer>
            <class>equilibrium</class>
            <id>prr</id>
            <boundary>
                <class>PlaneRingReflecting</class>
            </boundary>
            <solver>
                <class>SimpleCGS</class>
            </solver>
        </solute-layer>
        <solute-layer>
            <class>equilibrium</class>
            <id>prh</id>
            <boundary>
                <class>PlaneRingHard</class>
            </boundary>
            <solver>
                <class>SimpleCGS</class>
            </solver>
        </solute-layer>
    </first-case>

    <second-case>
        <solute-layer>
            <class>equilibrium</class>
            <id>abs</id>
            <boundary>
                <class>Absorbing</class>
            </boundary>
            <solver>
                <class>SimpleCGS</class>
            </solver>
        </solute-layer>
    </second-case>
</fixture>
